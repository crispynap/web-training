doctype html
html
	head
		meta(charset='utf-8')
		title 회원 가입
		link(rel='stylesheet', type='text/css', href='/css/style.css')
		link(rel='stylesheet', type='text/css', href='/Assets/Semantic-UI/semantic.min.css')
		script(src='/Assets/jquery/jquery-3.2.1.min.js')
		script(src='/Assets/jquery-ui/jquery-ui.min.js')
		script(src='/Assets/Semantic-UI/semantic.min.js')
		script(src='/Assets/underscore/underscore.min.js')
	body
		h1 회원 가입
		form#registerForm(action="/auth/register", method="post")
			div.ui.hidden.divider
			p
				div.ui.labeled.input
					input#inputId(type="text", name="userId", placeholder="아이디")
					#inputIdText 영문자, 숫자, _ 만 입력 가능. 3자 이상, 20자 이하로 입력하세요.
			p
				div.ui.labeled.input
					input#inputPassword(type="password", name="password", placeholder="비밀번호")
					#inputPasswordText 최소 6자 이상 입력하세요. 
			p
				div.ui.labeled.input
					input#inputPasswordCheck(type="password", name="password_check", placeholder="비밀번호 확인")
					#inputPasswordCheckText
			div.ui.hidden.divider
			p
				div.ui.labeled.input
					input#inputNickname(type="text", name="nickname", placeholder="별명")
					#inputNicknameText
			p
				div.ui.labeled.input
					input#inputEmail(type="text", name="email", placeholder="E-Mail")
					#inputEmailText
			div.ui.hidden.divider
			p
				div.ui.buttons
					div.ui.button 취소
					div.or
					div#reg_button.ui.positive.button 회원가입
		script(src='/js/auth/register.js')